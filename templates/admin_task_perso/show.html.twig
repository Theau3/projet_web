{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('style/Admin/TaskPerso/show.css') }}">
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet' type='text/css'>
{% endblock %}

{% block title %}Tâche perso{% endblock %}

{% block body %}
    <h1>Tâche perso</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Task_id</th>
                <td>{{ task_perso.task_id }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ task_perso.user_id }}</td>
            </tr>
            <tr>
                <th>Repetition</th>
                <td>{{ task_perso.repetition }}</td>
            </tr>
            <tr>
                <th>DueDate</th>
                <td>{{ task_perso.dueDate ? task_perso.dueDate|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ task_perso.dateDebut ? task_perso.dateDebut|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div id="buttons">
        <a class='btn btn-primary' href="{{ path('app_admin_task_perso_index') }}">retour à la liste</a>

        <a class='btn btn-success' href="{{ path('app_admin_task_perso_edit', {'Task': task_perso.Task}) }}">modifier</a>

        {{ include('admin_task_perso/_delete_form.html.twig') }}
    </div>
{% endblock %}
