{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('style/Admin/User/show.css') }}">
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet' type='text/css'>
{% endblock %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de pase</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Progression</th>
                <td>{{ user.progression }}</td>
            </tr>
            <tr>
                <th>Photo de profil</th>
                <td><img id="profile_picture" src="{{asset('profile_pictures/' ~ user.pp ~ '')}}" alt=""></td>
            </tr>
        </tbody>
    </table>
    <div id="buttons">
        <a class='btn btn-primary' href="{{ path('app_admin_user_index') }}">retour Ã  la liste</a>

        <a class='btn btn-success' href="{{ path('app_admin_user_edit', {'id': user.id}) }}">modifier</a>

        {{ include('admin_user/_delete_form.html.twig') }}
    </div>
{% endblock %}
